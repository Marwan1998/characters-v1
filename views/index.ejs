  <!------------------------------------------------ Body ---------------------------------------------->

  <div id="mainDiv" class="row row-cols-1 row-cols-md-2 g-4" style="margin: 0">


    <% characters.forEach(char => { %>
	
      <div class="col">
          <div class="card bg-info">
            <div id='id<%= char.id %>' class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img class="d-block w-100" src='<%= char.img1 %>' alt=<%= char.animNam %>>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src='<%= char.img2 %>' alt=<%= char.animNam %>>
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src='<%= char.img3 %>' alt=<%= char.animNam %>>
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target='#id<%= char.id %>' data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target='#id<%= char.id %>' data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
            <div class="card-body center">
              <h5 class="card-title"> <%= char.charNam %> </h5>
              <p class="card-text"> <%= char.animNam %></p>
            </div>
          </div>
        </div>

    <% }); %>


  </div>

