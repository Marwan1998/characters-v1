  <body class="bg-dark">
    
      <!------------------------------------------ Header -------------------------------------------->


    <nav class="navbar navbar-expand-lg navbar-light bg-info">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Characters</a>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="./insert.ejs">Insert</a>
            </li>
          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-primary" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>

    
<!------------------------------------------------ Body ---------------------------------------------->


    <div id="mainDiv" class="row row-cols-1 row-cols-md-2 g-4" style="margin: 0">

      <div class="card bg-info">
        <div  id='id<%= id %>' class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src='<%= img1 %>' alt=<%= animNam %> >
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src= '<%= img2 %>' alt=<%= animNam %>>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src='<%= img3 %>' alt=<%= animNam %>>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target='#id<%= id %>' data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target='#id<%= id %>' data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <div class="card-body center">
            <h5 class="card-title"> <%= charNam %> </h5>
            <p class="card-text"> <%= animNam %></p>
        </div>
    </div>

    </div>


